@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
        // Layout = null;
}

<script src="~/plugins/jQuery/jQuery-2.1.4.min.js"></script>
<script src="~/js/Masters/Company.js"></script>
<script src="~/js/Custom.js"></script>

<script>
    var api_url = '@ViewBag.api_url'
    $(document).ready(function () {
        ObjCompany.init();
    });
</script>
<section class="content-header">
    <h1>Company
            <small>Masters</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Recruiters/RecruitersDashboard"><i class="fa fa-home"></i>Home</a></li>
        <li class="active"><a href="~/Company/Company">Company</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">
            <div id="ViewBranch">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"></h3>
                        <div class="btn-group pull-left">
                            <button id="btnAddNew" class="btn btn-primary" onclick="ObjCompany.Show(2)">
                                Add New <i class="fa fa-plus"></i>
                            </button>
                        </div>
                        <div class="btn-group pull-right">
                            <div class="box-tools">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input name="table_search" class="form-control pull-right" id="txtSearch" placeholder="Search" type="text">

                                    <div class="input-group-btn">
                                        <button type="submit" id="btnSearch" onclick="ObjCompany.FillGrid();" class="btn btn-default"><i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div id="Grid" class="box-body">
                    </div>
                </div>

            </div>
            <div id="AddBranch" style="display: none;">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Add Company</h3>
                        <div class="btn-group pull-right">
                            <button id="btnBack" class="btn btn-primary" onclick="ObjCompany.init()">
                                <i class="fa fa-arrow-up"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="form-horizontal">
                        <div class="box-body">                            
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Company Code<span style="color: red">*</span></label>
                                <div class="col-sm-6"> 
                                    <input type="hidden" id="CompanyId" value="0" />
                                    <input type="text" class="form-control" id="txtCompanyCode"  maxlength="10" onchange="ObjCompany.Validate()" />
                                </div>
                            </div>

                              <div class="form-group">
                                <label class="col-sm-2 control-label">Company Name<span style="color: red">*</span></label>
                                <div class="col-sm-6">                                   
                                    <input type="text" class="form-control" id="txtCompanyName" maxlength="25" onchange="ObjCompany.Validate()" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Company Address1</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtCompanyAddr1" maxlength="250" onchange="ObjCompany.Validate()" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Company Address2</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtCompanyAddr2" maxlength="250" onchange="ObjCompany.Validate()" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Company Address3</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtCompanyAddr3" maxlength="250" onchange="ObjCompany.Validate()" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Company Phone<span style="color: red">*</span></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtCompanyPhone" onchange="ObjCompany.Validate()" onkeypress="CheckInteger(event);" onblur="CheckMobileNumberBlur(this);" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Company Mob<span style="color: red">*</span></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtCompanyMob" onchange="ObjCompany.Validate()" onkeypress="CheckInteger(event);" onblur="CheckMobileNumberBlur(this);"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Company Email<span style="color: red">*</span></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtCompanyEmail" maxlength="50" onchange="ObjCompany.Validate()" onblur="CheckEmailBlur(this);"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Sort Order</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control textboxNum" id="txtSortOrder" onchange="ObjCompany.Validate()" onkeypress=" CheckInteger(event);"  maxlength="10" />
                                </div>
                            </div>
                              <div class="form-group">
                                <label class="col-sm-2 control-label"></label>
                                <div class="col-sm-6">
                                    <input type="checkbox" class="icheck" id="chkActive" /><span style="font-weight: bold; padding-left: 5px;">Active</span>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <div class="btn-group pull-right">
                                <button id="btnSubmit" type="submit" class="btn btn-primary" onclick="ObjCompany.Submit()">Submit</button>

                                &nbsp;&nbsp
                           <button type="reset" id="btnClear" class="btn btn-primary" onclick="ObjCompany.Clear()">Clear</button>

                            </div>


                        </div>
                        <!-- /.box-footer -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->


</section>
