<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">
            <div id="ViewClient">

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"></h3>
                        <div class="btn-group pull-left">
                            <button id="btnAddNew" class="btn btn-primary" onclick="objClient.Show(2)">
                                Add New <i class="fa fa-plus"></i>
                            </button>
                        </div>
                        <div class="btn-group pull-right">
                            <div class="box-tools">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input name="table_search" class="form-control pull-right" id="txtSearch" placeholder="Search" type="text">

                                    <div class="input-group-btn">
                                        <button type="submit" id="btnSearch" onclick="objClient.FillGrid();" class="btn btn-default"><i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div id="Grid" class="box-body">
                    </div>
                </div>

            </div>
            <div id="AddClient" style="display: none;">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Add Client</h3>
                        <div class="btn-group pull-right">
                            <button id="btnBack" class="btn btn-primary" onclick="objClient.init()">
                                <i class="fa fa-arrow-up"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="form-horizontal">
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Code<span style="color: red">*</span></label>
                                <div class="col-sm-6">
                                    <input type="hidden" id="hfClientId" value="0" />
                                    <input type="text" class="form-control" id="txtClientCode" onchange="objClient.Validate();" maxlength="10" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">ShortName<span style="color: red">*</span></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtClientShortName" onchange="objClient.Validate()" maxlength="10" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Name<span style="color: red">*</span></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtClientName" onchange="objClient.Validate()" maxlength="25" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Address1<span style="color: red">*</span></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtAddress1" onchange="objClient.Validate()" maxlength="50" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Address2<span style="color: red">*</span></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtAddress2" onchange="objClient.Validate()" maxlength="50" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Address3<span style="color: red">*</span></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtAddress3" onchange="objClient.Validate()" maxlength="50" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Email<span style="color: red">*</span></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtEmail" onchange="objClient.Validate()" onblur="CheckEmailBlur(this);" maxlength="50" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Mobile<span style="color: red">*</span></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtMobile" onchange="objClient.Validate()" onkeypress="CheckInteger(event);" onblur="CheckMobileNumberBlur(this);" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Phone<span style="color: red">*</span></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtPhone" onkeypress="CheckInteger(event);" onchange="objClient.Validate();" onblur="CheckMobileNumberBlur(this);" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Re-Seller</label>
                                <div class="col-sm-6">
                                    <select id="ddlReseller" class="form-control" onchange="objClient.Validate()">
                                    </select>
                                </div>
                            </div>
                           <div class="form-group">
                                <label class="col-sm-2 control-label">Subscription Plan<span style="color: red">*</span></label>
                                <div class="col-sm-6">
                                    <select id="ddlSubscriptionPlan" class="form-control" onchange="objClient.Validate()">
                                    </select>
                                </div>
                            </div>
                            <div class="form-group" id="divFillDdl">
                                <label class="col-sm-2 control-label">Products</label>
                                <div class="col-sm-6">
                                    <select class="form-control select2" multiple="multiple" id="ddlProduct" data-placeholder="Select a Product" style="width: 100%;">
                                    </select>
                                </div>
                            </div>





                            <div class="form-group">
                                <label class="col-sm-2 control-label">Sort Order</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control textboxNum" id="txtClientSortOrder" onkeypress="CheckInteger(event);" onchange="objClient.Validate();" maxlength="10" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label"></label>
                                <div class="col-sm-6">
                                    <input type="checkbox" class="icheck" id="chkActive" /><span style="font-weight: bold; padding-left: 5px;">Active</span>
                                </div>
                            </div>
                            <!-- /.box-body  onclick="GetSelectedItems();"  -->
                            <div class="box-footer">
                                <div class="btn-group pull-right">
                                    <button id="btnSubmit" type="submit" class="btn btn-primary" onclick="objClient.Submit();">Submit</button>
                                    &nbsp;&nbsp
                           <button type="reset" id="btnClear" class="btn btn-primary" onclick="objClient.Clear()">Clear</button>

                                </div>


                            </div>
                            <!-- /.box-footer -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
</section>
