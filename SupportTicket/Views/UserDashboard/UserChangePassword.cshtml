@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<script src="~/plugins/jQuery/jQuery-2.1.4.min.js"></script>
<script src="~/js/Masters/UserChangePassword.js"></script>
<script src="~/js/Custom.js"></script>



<script>

    var api_url = '@ViewBag.api_url'


    $(document).ready(function () {
        ObjUserChangePassword.init();
    });
</script>
<section class="content-header">
    <h1>Change password
            <small>Masters</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/UserDashboard/UserDashboard"><i class="fa fa-home"></i>Home</a></li>
        <li class="active">Change Password</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">
          
            <div id="Changepassword" style="display: none;">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Change password</h3>
                        <div class="btn-group pull-right">
                            <a href="~/UserDashboard/UserDashboard" ><button id="btnBack" class="btn btn-primary" onclick="ObjUserChangePassword.Show(1)">
                                <i class="fa fa-arrow-up"></i>
                            </button></a>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="form-horizontal">
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Name<span style="color: red"></span></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtUserNamecurrent" onchange="ObjUserChangePassword.Validate();" maxlength="25" />
                                </div>
                            </div>
                           <div class="form-group">
                                <label class="col-sm-2 control-label">Current Password<span style="color: red">*</span></label>
                                <div class="col-sm-6">
                                    <input type="password" class="form-control" id="txtUserPasswordcurrent" onchange="ObjUserChangePassword.Validate();" maxlength="50" />
                                </div>
                            </div>
                          <div class="form-group">
                                <label class="col-sm-2 control-label">New Password<span style="color: red">*</span></label>
                                <div class="col-sm-6">
                                    <input type="password" class="form-control" id="txtUserPasswordnew" onchange="ObjUserChangePassword.Validate();" onblur="CheckPasswordBlur(this);" maxlength="50" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Confirm Password<span style="color: red">*</span></label>
                                <div class="col-sm-6">
                                    <input type="password" class="form-control" id="txtUserPasswordconfirm" onchange="ObjUserChangePassword.Validate();" onblur="CheckPasswordBlur(this);" maxlength="50" />
                                </div>
                            </div>

                            </div>
                           
                           
                            
                            
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <div class="btn-group pull-right">
                                <button id="btnSubmit" type="submit" class="btn btn-primary" onclick="ObjUserChangePassword.Submit();">Submit</button>

                                &nbsp;&nbsp
                           <button type="reset" id="btnClear" class="btn btn-primary" onclick="ObjUserChangePassword.Clear();">Clear</button>

                            </div>


                        </div>


                    </div>
                        <!-- /.box-footer -->
                    </div>
                </div>
            </div>
        
    
    <!-- /.row -->


</section>